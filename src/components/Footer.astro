---
const navigation = [
  {
    title: "Servicios",
    url: "/servicios",
  },
  {
    title: "Nosotros",
    url: "/nosotros",
  },
];

const socialNetworks = [
  {
    title: "Facebook",
    url: "https://www.facebook.com/profile.php?id=61561107718264&mibextid=ZbWKwL",
    img: "/facebook.svg",
    imgAlt: "Facebook Logo",
    imgTitle: "Visita nuestro perfil en Facebook",
    imgAriaLabel: "Enlace a Facebook",
  },
  {
    title: "Instagram",
    url: "https://www.instagram.com/cctvmedina?igsh=MTVubWI3OTM5aGNvZg==",
    img: "/instagram.svg",
    imgAlt: "Instagram Logo",
    imgTitle: "Visita nuestro perfil en Instagram",
    imgAriaLabel: "Enlace a Instagram",
  },
  {
    title: "WhatsApp",
    url: "https://api.whatsapp.com/send?phone=+56951105106&text=Hola!%20%C2%BFQue%20tal?%20He%20visto%20su%20p%C3%A1gina%20web%20y%20me%20gustar%C3%ADa%20consultar%20sobre%20uno%20de%20sus%20servicios.",
    img: "/whatsapp.svg",
    imgAlt: "WhatsApp Logo",
    imgTitle: "Contacta con nosotros por WhatsApp",
    imgAriaLabel: "Enlace a WhatsApp",
  },
];

const legal = [
  {
    title: "Políticas de Privacidad",
    url: "/",
  },
  {
    title: "Términos y condiciones",
    url: "/",
  },
];
---

<footer
  class="bg-white dark:bg-gray-900 border-t border-gray-200 dark:border-gray-600"
>
  <div class="mx-auto w-full max-w-screen-lg p-4 py-6 lg:py-8">
    <div class="md:flex md:justify-between">
      <div class="mb-6 md:mb-0">
        <a href="/" class="flex items-center">
          <img
            src="/logo-energias-digital.svg"
            class="h-14 me-3"
            alt="Imagen que muestra el logo de Energías Digital SPA."
            title="Logo Energías Digital SPA."
            aria-label="Ir a la página principal"
          />
        </a>
      </div>
      <div class="grid grid-cols-2 gap-8 sm:gap-6 sm:grid-cols-3">
        <div>
          <h2
            class="mb-6 text-sm font-semibold text-gray-900 dark:text-gray-50 uppercase"
          >
            Navegación
          </h2>
          <ul class="text-gray-500 font-medium">
            {
              navigation.map((navigation) => (
                <li class="mb-4">
                  <a
                    aria-label={navigation.title}
                    href={navigation.url}
                    class="hover:underline hover:text-red-500"
                  >
                    {navigation.title}
                  </a>
                </li>
              ))
            }
          </ul>
        </div>
        <div>
          <h2
            class="mb-6 text-sm font-semibold text-gray-900 dark:text-gray-50 uppercase"
          >
            Síguenos en
          </h2>
          <ul class="text-gray-500 font-medium">
            {
              socialNetworks.map((socialNetworks) => (
                <li class="mb-4">
                  <a
                    aria-label={socialNetworks.title}
                    href={socialNetworks.url}
                    class="hover:underline hover:text-red-500"
                    target="_blank"
                  >
                    {socialNetworks.title}
                  </a>
                </li>
              ))
            }
          </ul>
        </div>
        <div>
          <h2
            class="mb-6 text-sm font-semibold text-gray-900 dark:text-gray-50 uppercase"
          >
            Legal
          </h2>
          <ul class="text-gray-500 font-medium">
            {
              legal.map((legal) => (
                <li class="mb-4">
                  <a
                    aria-label={legal.title}
                    href={legal.url}
                    class="hover:underline hover:text-red-500"
                  >
                    {legal.title}
                  </a>
                </li>
              ))
            }
          </ul>
        </div>
      </div>
    </div>
    <hr class="my-6 border-gray-200 dark:border-gray-700 sm:mx-auto lg:my-8" />
    <div class="sm:flex sm:items-center sm:justify-between">
      <span class="text-sm text-gray-500 sm:text-center"
        >Copyright © 2024 <a
          href="/"
          class="hover:underline hover:text-red-500">Energías Digital SPA.</a
        > Creado por <a
          href="https://fabianjara.netlify.app/"
          class="hover:underline hover:text-red-500"
          target="_blank">Fabian Jara</a
        >
      </span>
      <div class="flex mt-4 sm:justify-center sm:mt-0">
        {
          socialNetworks.map((socialNetworks) => (
            <a
              href={socialNetworks.url}
              aria-label={socialNetworks.title}
              class="text-gray-500 hover:text-gray-900 ms-5"
              target="_blank"
            >
              <img
                src={socialNetworks.img}
                class="w-4 h-4"
                alt={socialNetworks.imgAlt}
                title={socialNetworks.imgTitle}
                aria-label={socialNetworks.imgAriaLabel}
              />
              <span class="sr-only">{socialNetworks.title}</span>
            </a>
          ))
        }
      </div>
    </div>
  </div>
</footer>
